<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.indiakathi.mvc.Categories">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/imageView3"
        android:background="#FFF54028"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:text="Noodles"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:gravity="center_vertical"
        android:textSize="25dp"
        android:onClick="Noodles"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/imageView5"
        android:background="#9932CC"
        android:layout_below="@+id/imageView3"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:text="Fried Rice"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:gravity="center_vertical"
        android:onClick="FriedRice"
        android:textSize="25dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/imageView6"
        android:background="#FF00FF"
        android:layout_below="@+id/imageView5"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:text="Chinese Starters"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:gravity="center_vertical"
        android:textSize="25dp"
        android:onClick="ChineseStarters"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/imageView7"
        android:background="#688E23"
        android:layout_below="@+id/imageView6"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:text="Vegetarian Starters"
        android:textSize="25dp"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:gravity="center_vertical"
        android:onClick="vegStarters"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/imageView8"
        android:background="#9932CC"
        android:layout_below="@+id/imageView7"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:text="Dhadakte Tandoor Se"
        android:textSize="25dp"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:gravity="center_vertical"
        android:onClick="tandooriItem"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/imageView9"
        android:textSize="25dp"
        android:background="#20B2AA"
        android:layout_below="@+id/imageView8"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:text="Rolls"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:gravity="center_vertical"
        android:onClick="Rolls"/>

</RelativeLayout>
